<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capstone.adityanaikdomsangiovanni.wa_agenda">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.capstone.adityanaikdomsangiovanni.wa_agenda.MainActivity" />
        </activity>

        <receiver
            android:name=".AlarmManager"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".TasksActivity"
            android:label="@string/title_task_activity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.capstone.adityanaikdomsangiovanni.wa_agenda.MainActivity" />
        </activity>
        <activity
            android:name=".AddTaskActivity"
            android:label="@string/title_add_task"
            android:parentActivityName=".TasksActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.capstone.adityanaikdomsangiovanni.wa_agenda.TasksActivity" />
        </activity>
        <activity
            android:name=".AddClassActivity"
            android:label="@string/title_add_class"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.capstone.adityanaikdomsangiovanni.wa_agenda.MainActivity" />
        </activity>
    </application>

</manifest>